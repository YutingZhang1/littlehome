/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

/* 导航栏公共样式 */
.custom-navbar {
  width: 100%;
  height: 100px;
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(180deg, #ff9eaa, #9fc3f8);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  box-shadow: 0 4px 15px rgba(255, 158, 170, 0.2);
}

.navbar-title {
  font-size: 24px;
  font-weight: lighter;
  color: #ffffff;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
}

.back-btn {
  position: absolute;
  left: 20px;
  top: 50px;
  color: #fff;
  font-size: 28rpx;
  z-index: 101;
}

/* 装饰元素 */
.page-container::before,
.page-container::after {
  content: '';
  position: fixed;
  width: 200px;
  height: 200px;
  border-radius: 50%;
  z-index: -1;
}

.page-container::before {
  top: 120px;
  left: -100px;
  background: radial-gradient(circle, rgba(255, 158, 170, 0.1) 0%, rgba(255, 158, 170, 0) 70%);
}

.page-container::after {
  bottom: 50px;
  right: -100px;
  background: radial-gradient(circle, rgba(159, 195, 248, 0.1) 0%, rgba(159, 195, 248, 0) 70%);
}

/* 统一背景样式 */
page {
  background: linear-gradient(180deg, #ffeef0 0%, #fff6f7 50%, #ffffff 100%);
  height: 100vh;
  overflow: hidden;
}

/* 页面容器样式 */
.page-container {
  height: calc(100vh - 100px);
  margin-top: 100px;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.pretty-btn-row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  gap: 16px;
  margin: 12px 0 0 0;
}

.pretty-gradient-btn, .avatar-btn {
  background: linear-gradient(90deg, #ff9eaa 0%, #9fc3f8 100%);
  color: #fff;
  border: none;
  border-radius: 999px;
  padding: 0 32px;
  height: 44px;
  line-height: 44px;
  font-size: 18px;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 15px rgba(255, 158, 170, 0.08);
  outline: none;
  margin: 20px auto 0 auto;
  transition: opacity 0.2s;
}
.pretty-gradient-btn:active, .avatar-btn:active {
  opacity: 0.8;
}
.pretty-cancel-btn {
  flex: 1;
  background: #f5f5f5;
  color: #888;
  border: none;
  border-radius: 999px;
  height: 36px;
  line-height: 36px;
  font-size: 16px;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: none;
  outline: none;
  transition: opacity 0.2s;
  margin: 0;
}
.pretty-cancel-btn:active {
  opacity: 0.7;
}

.anniversary-modal, .anniversary-picker-modal {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}
.modal-mask {
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.3);
}
.modal-content {
  position: relative;
  background: #fff;
  border-radius: 18px;
  padding: 32px 24px 24px 24px;
  min-width: 260px;
  min-height: 120px;
  box-shadow: 0 8px 32px rgba(0,0,0,0.12);
  z-index: 10000;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.modal-title {
  font-size: 20px;
  font-weight: 600;
  margin-bottom: 18px;
  color: #ff9eaa;
}
.modal-input {
  width: 200px;
  height: 36px;
  border: 1px solid #eee;
  border-radius: 8px;
  margin-bottom: 14px;
  padding: 0 10px;
  font-size: 16px;
}
.anniversary-list {
  width: 100%;
  margin-bottom: 16px;
}
.anniversary-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 6px 0;
  font-size: 16px;
}
.anniversary-item button {
  margin-left: 8px;
}
