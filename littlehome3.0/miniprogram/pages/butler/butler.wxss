/* 摩天轮样式 */
.wheel-container {
  margin-top: 20px;
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.wheel {
  width: 280px;
  height: 280px;
  border-radius: 50%;
  position: relative;
  padding: 15px;
  overflow: hidden;
  background: #fff;
  border: 2px solid #fff;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.wheel-inner {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.wheel-spokes {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  z-index: 1;
}

.wheel-spoke {
  position: absolute;
  width: 1px;
  height: 50%;
  background: rgba(255, 255, 255, 0.6);
  left: 50%;
  top: 0;
  transform-origin: bottom center;
  z-index: 3;
}

.wheel-item {
  position: absolute;
  width: 50%;
  height: 100%;
  transform-origin: 0 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2;
  left: 50%;
  top: 0;
  clip-path: polygon(0 0, 100% 0, 0 100%);
}

/* 添加反向扇形 */
.wheel-item::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background: inherit;
  transform-origin: 0 50%;
  transform: rotate(180deg);
  clip-path: polygon(0 0, 100% 0, 0 100%);
}

.wheel-item text {
  position: absolute;
  left: 30px;
  top: 20px;
  transform-origin: 0 0;
  font-size: 14px;
  font-weight: 500;
  white-space: nowrap;
  z-index: 2;
  color: #fff;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
}

/* 使用更简洁的双色交替 */
.wheel-item:nth-child(2n+1) { background: #FF9EAA; }
.wheel-item:nth-child(2n) { background: #9FC3F8; }

.wheel-center {
  position: absolute;
  width: 30px;
  height: 30px;
  background: #fff;
  border-radius: 50%;
  z-index: 4;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid rgba(0, 0, 0, 0.1);
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.wheel-pointer {
  width: 20px;
  height: 25px;
  background: #FF9EAA;
  position: absolute;
  top: -12px;
  clip-path: polygon(50% 0, 100% 100%, 0 100%);
  z-index: 10;
}

