@import "../../common-styles.wxss";
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 100px;
  padding-top: 50rpx;
  background: linear-gradient(180deg, #ff9eaa, #9fc3f8);
  z-index: 100;
  display: flex;
  align-items: center;
}
.back-btn {
  width: 80rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  left: 0;
  z-index: 1;
}
.back-btn image {
  width: 40rpx;
  height: 40rpx;
  transition: transform 0.2s ease;
  filter: brightness(0) invert(1);
}
.back-btn:active image {
  transform: scale(0.9);
}
.navbar-title {
  font-size: 24px;
  font-weight: lighter;
  color: #ffffff;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
  text-align: center;
  flex: 1;
}
.notes-container {
  padding: 20rpx;
  padding-top: 260rpx;
}
.add-note {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  color: #888;
  font-size: 32rpx;
  border-bottom: 1px solid #f0f0f0;
}
.add-icon {
  font-size: 40rpx;
  color: #4CAF50;
  margin-right: 16rpx;
}
.notes-list {
  min-height: 400rpx;
  max-height: 900rpx;
}
.note-item {
  background: #fff;
  margin: 30rpx 0;
  padding: 40rpx 30rpx 24rpx 30rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 24rpx #e0e0e0;
  position: relative;
  transition: box-shadow 0.2s;
}
.note-item:active {
  box-shadow: 0 2rpx 8rpx #e0e0e0;
}
.note-content {
  font-size: 36rpx;
  color: #222;
  margin-bottom: 18rpx;
  word-break: break-all;
  line-height: 1.8;
}
.note-meta {
  font-size: 26rpx;
  color: #8a8a8a;
  text-align: right;
  letter-spacing: 1rpx;
}
.note-modal {
  display: none;
}
.note-modal.show {
  display: block;
  position: fixed;
  left: 0; top: 0; right: 0; bottom: 0;
  z-index: 1000;
}
.modal-mask {
  position: absolute;
  left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.3);
}
.modal-content {
  position: absolute;
  left: 50%; top: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx 30rpx 30rpx;
  box-shadow: 0 4rpx 24rpx #e0e0e0;
}
.note-textarea {
  width: 100%;
  min-height: 180rpx;
  font-size: 32rpx;
  border: 1px solid #eee;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  resize: none;
}
.modal-footer {
  display: flex;
  justify-content: flex-end;
  gap: 40rpx;
}
.cancel-btn, .save-btn {
  font-size: 32rpx;
  color: #4CAF50;
  padding: 10rpx 30rpx;
}
.loading-text {
  text-align: center;
  color: #aaa;
  margin: 30rpx 0;
}
.save-btn {
  font-size: 32rpx;
  color: #fff;
  background: linear-gradient(90deg, #4CAF50, #43e97b);
  border: none;
  border-radius: 10rpx;
  padding: 10rpx 40rpx;
  margin-left: 30rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
  box-shadow: 0 2rpx 8rpx #e0e0e0;
}
.save-btn:active {
  opacity: 0.8;
}
.check-icon {
  font-size: 36rpx;
  color: #fff;
  margin-right: 6rpx;
}
.pretty-btn-row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin-top: 10rpx;
  padding: 0 20rpx;
}

.pretty-cancel-btn,
.pretty-gradient-btn {
  width: 180rpx;
  min-width: 180rpx;
  max-width: 180rpx;
  height: 84rpx;
  line-height: 84rpx;
  font-size: 24rpx;
  font-weight: 500;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  box-shadow: none;
  transition: opacity 0.2s;
  margin: 0;
}
.pretty-cancel-btn {
  background: #f5f5f5;
  color: #888;
  border: none;
}
.pretty-cancel-btn:active {
  opacity: 0.7;
}
.pretty-gradient-btn {
  background: linear-gradient(90deg, #ff9eaa 0%, #9fc3f8 100%);
  color: #fff;
  border: none;
  box-shadow: 0 2px 8px #f8cdd5;
}
.pretty-gradient-btn:active {
  opacity: 0.8;
} 