/* pages/souvenirs/souvenirs.wxss */
.container {
  padding: 0;
  background: #FEFBF6;
  min-height: 100vh;
}

/* Ëá™ÂÆö‰πâÂØºËà™Ê†è */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background: linear-gradient(135deg, #E6A4B4 0%, #ACD7E5 100%);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  z-index: 1000;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.navbar-left {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.back-icon {
  font-size: 36rpx;
  color: white;
  font-weight: bold;
}

.back-text {
  font-size: 28rpx;
  color: white;
  font-weight: 500;
}

.navbar-title {
  font-size: 32rpx;
  color: white;
  font-weight: 600;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

.navbar-right {
  width: 80rpx;
}

/* Ë∞ÉÊï¥È°∂ÈÉ®Ê®™ÂπÖÁöÑËæπË∑ùÔºå‰∏∫ÂØºËà™Ê†èÁïôÂá∫Á©∫Èó¥ */
.banner-section {
  margin-top: 0rpx;
  background: linear-gradient(135deg, #E6A4B4 0%, #ACD7E5 100%);
  padding: 60rpx 32rpx 40rpx;
  position: relative;
  overflow: hidden;
}

.banner-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="gifts" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse"><text x="10" y="15" font-size="12" fill="white" opacity="0.1">üéÅ</text></pattern></defs><rect width="100" height="100" fill="url(%23gifts)"/></svg>');
  opacity: 0.3;
}

.banner-content {
  position: relative;
  z-index: 1;
  text-align: center;
  margin-bottom: 0rpx;
}

.banner-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 16rpx;
}

.banner-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.5;
}

.banner-decoration {
  position: relative;
  z-index: 1;
  text-align: center;
}

.decoration-icon {
  font-size: 60rpx;
  opacity: 0.8;
}

/* ÂàÜÁ±ªÊ†áÁ≠æ */
.category-tabs {
  display: flex;
  background: #FFFDF9;
  padding: 0 32rpx;
  border-bottom: 1px solid #F3E9DD;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  padding: 24rpx 16rpx;
  text-align: center;
  position: relative;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #E6A4B4;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #E6A4B4;
  border-radius: 2rpx;
}

.tab-text {
  font-size: 28rpx;
  font-weight: 500;
  color: inherit;
}

/* Á∫™ÂøµÂìÅÂàóË°® */
.souvenirs-list {
  padding: 32rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.souvenir-item {
  background: #FFFDF9;
  border: 1px solid #F3E9DD;
  border-radius: 20rpx;
  overflow: hidden;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(127, 111, 100, 0.05);
}

.souvenir-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(127, 111, 100, 0.1);
}

.souvenir-image {
  position: relative;
  width: 100%;
  height: 300rpx;
  overflow: hidden;
}

.item-image {
  width: 100%;
  height: 100%;
  background: #F3E9DD;
}

.souvenir-badge {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  background: #E6A4B4;
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.souvenir-badge.hot {
  background: #ACD7E5;
  color: #7F6F64;
}

.badge-text {
  font-size: 22rpx;
}

.souvenir-info {
  padding: 24rpx;
}

.souvenir-name {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #7F6F64;
  margin-bottom: 8rpx;
  line-height: 1.3;
}

.souvenir-desc {
  display: block;
  font-size: 24rpx;
  color: #9A8C82;
  line-height: 1.4;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.souvenir-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.points-section {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.points-icon {
  width: 24rpx;
  height: 24rpx;
}

.points-value {
  font-size: 32rpx;
  color: #E6A4B4;
  font-weight: 700;
}

.points-original {
  font-size: 22rpx;
  color: #9A8C82;
  text-decoration: line-through;
  margin-left: 8rpx;
}

.rating-section {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.rating-stars {
  font-size: 20rpx;
}

.rating-count {
  font-size: 22rpx;
  color: #9A8C82;
}

.souvenir-tags {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
}

.tag {
  background: #F8E8EE;
  color: #E6A4B4;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
}

/* Á©∫Áä∂ÊÄÅ */
.empty-state {
  text-align: center;
  padding: 120rpx 32rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #7F6F64;
  margin-bottom: 16rpx;
}

.empty-desc {
  display: block;
  font-size: 28rpx;
  color: #9A8C82;
  line-height: 1.5;
}

/* ËØ¶ÊÉÖÂºπÁ™ó */
.detail-modal {
  max-width: 700rpx;
  max-height: 90vh;
}

.detail-swiper {
  height: 400rpx;
  width: 100%;
}

.swiper-image {
  width: 100%;
  height: 100%;
  background: #F3E9DD;
}

.detail-info {
  padding: 32rpx;
  border-bottom: 1px solid #F3E9DD;
}

.detail-points {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.detail-points-icon {
  width: 32rpx;
  height: 32rpx;
}

.detail-points-value {
  font-size: 40rpx;
  color: #E6A4B4;
  font-weight: 700;
}

.detail-points-original {
  font-size: 24rpx;
  color: #9A8C82;
  text-decoration: line-through;
  margin-left: 12rpx;
}

.detail-rating {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.detail-stars {
  font-size: 24rpx;
}

.detail-rating-text {
  font-size: 24rpx;
  color: #9A8C82;
}

.detail-description {
  font-size: 28rpx;
  color: #4A4A4A;
  line-height: 1.6;
}

/* ÂÆöÂà∂ÈÄâÈ°π */
.customization-section {
  padding: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #7F6F64;
  margin-bottom: 24rpx;
}

.option-group {
  margin-bottom: 32rpx;
}

.option-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #7F6F64;
  margin-bottom: 16rpx;
}

.template-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.template-item {
  border: 2rpx solid #F3E9DD;
  border-radius: 12rpx;
  padding: 16rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.template-item.selected {
  border-color: #E6A4B4;
  background: #F8E8EE;
}

.template-preview {
  width: 100%;
  height: 120rpx;
  border-radius: 8rpx;
  background: #F3E9DD;
  margin-bottom: 8rpx;
}

.template-name {
  font-size: 24rpx;
  color: #7F6F64;
}

.style-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.style-item {
  border: 2rpx solid #F3E9DD;
  border-radius: 12rpx;
  padding: 20rpx 12rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.style-item.selected {
  border-color: #E6A4B4;
  background: #F8E8EE;
}

.style-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.style-name {
  font-size: 22rpx;
  color: #7F6F64;
}

.size-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.size-item {
  border: 2rpx solid #F3E9DD;
  border-radius: 12rpx;
  padding: 20rpx;
  transition: all 0.3s ease;
}

.size-item.selected {
  border-color: #E6A4B4;
  background: #F8E8EE;
}

.size-name {
  display: block;
  font-size: 26rpx;
  font-weight: 500;
  color: #7F6F64;
  margin-bottom: 4rpx;
}

.size-desc {
  display: block;
  font-size: 22rpx;
  color: #9A8C82;
  margin-bottom: 8rpx;
}

.size-points {
  font-size: 22rpx;
  color: #E6A4B4;
  font-weight: 500;
}

.quantity-selector {
  display: flex;
  align-items: center;
  gap: 24rpx;
  justify-content: center;
}

.quantity-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 2rpx solid #E6A4B4;
  background: white;
  color: #E6A4B4;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

.quantity-btn:disabled {
  border-color: #F3E9DD;
  color: #9A8C82;
}

.quantity-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #7F6F64;
  min-width: 60rpx;
  text-align: center;
}

/* Áî®Êà∑ËØÑ‰ª∑ */
.reviews-section {
  padding: 32rpx;
  border-top: 1px solid #F3E9DD;
}

.review-item {
  margin-bottom: 32rpx;
  padding-bottom: 32rpx;
  border-bottom: 1px solid #F3E9DD;
}

.review-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.review-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.review-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #F3E9DD;
}

.review-info {
  flex: 1;
}

.review-name {
  display: block;
  font-size: 26rpx;
  font-weight: 500;
  color: #7F6F64;
  margin-bottom: 4rpx;
}

.review-stars {
  font-size: 20rpx;
}

.review-date {
  font-size: 22rpx;
  color: #9A8C82;
}

.review-content {
  font-size: 26rpx;
  color: #4A4A4A;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.review-images {
  display: flex;
  gap: 12rpx;
}

.review-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  background: #F3E9DD;
}

/* ÂºπÁ™óÂ∫ïÈÉ® */
.modal-footer {
  padding: 32rpx;
  border-top: 1px solid #F3E9DD;
  background: #FFFDF9;
}

.total-points {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  gap: 8rpx;
}

.total-label {
  font-size: 28rpx;
  color: #7F6F64;
}

.total-points-icon {
  width: 28rpx;
  height: 28rpx;
}

.total-value {
  font-size: 36rpx;
  color: #E6A4B4;
  font-weight: 700;
}

.action-buttons {
  display: flex;
  gap: 16rpx;
}

.action-buttons .btn {
  flex: 1;
  padding: 20rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  min-height: 80rpx;
}

/* Ë¥≠Áâ©ËΩ¶ÂºπÁ™ó */
.cart-modal {
  max-width: 600rpx;
  max-height: 80vh;
}

.cart-items {
  padding: 32rpx;
}

.cart-item {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 0;
  border-bottom: 1px solid #F3E9DD;
}

.cart-item:last-child {
  border-bottom: none;
}

.cart-item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  background: #F3E9DD;
  flex-shrink: 0;
}

.cart-item-info {
  flex: 1;
}

.cart-item-name {
  display: block;
  font-size: 26rpx;
  font-weight: 500;
  color: #7F6F64;
  margin-bottom: 8rpx;
}

.cart-item-options {
  display: block;
  font-size: 22rpx;
  color: #9A8C82;
  margin-bottom: 12rpx;
}

.cart-item-points {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.cart-points-icon {
  width: 20rpx;
  height: 20rpx;
}

.cart-points-value {
  font-size: 28rpx;
  color: #E6A4B4;
  font-weight: 600;
}

.cart-item-actions {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  align-items: center;
}

.cart-quantity-btn {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 1px solid #E6A4B4;
  background: white;
  color: #E6A4B4;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cart-quantity {
  font-size: 24rpx;
  color: #7F6F64;
  font-weight: 500;
}

.cart-remove-btn {
  background: none;
  border: none;
  color: #9A8C82;
  font-size: 22rpx;
  padding: 8rpx;
}

.empty-cart {
  text-align: center;
  padding: 80rpx 32rpx;
}

.empty-cart-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-cart-text {
  font-size: 28rpx;
  color: #9A8C82;
}

.cart-total {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  gap: 8rpx;
}

.cart-total-label {
  font-size: 28rpx;
  color: #7F6F64;
}

.cart-total-icon {
  width: 28rpx;
  height: 28rpx;
}

.cart-total-value {
  font-size: 36rpx;
  color: #E6A4B4;
  font-weight: 700;
}

/* ÊµÆÂä®Ë¥≠Áâ©ËΩ¶ÊåâÈíÆ */
.fab-cart {
  position: fixed;
  bottom: 120rpx;
  right: 32rpx;
  width: 120rpx;
  height: 120rpx;
  background: #E6A4B4;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(127, 111, 100, 0.2);
  z-index: 1000;
  transition: all 0.3s ease;
}

.fab-cart:active {
  transform: scale(0.95);
}

.fab-cart-icon {
  font-size: 48rpx;
  color: white;
}

.fab-cart-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: #ACD7E5;
  color: #7F6F64;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 600;
}

.fab-cart-count {
  font-size: 20rpx;
}

/* ÂìçÂ∫îÂºèËÆæËÆ° */
@media (max-width: 750rpx) {
  .souvenirs-list {
    grid-template-columns: 1fr;
  }
  
  .template-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .style-grid {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .size-grid {
    grid-template-columns: 1fr;
  }
  
  .action-buttons {
    flex-direction: column;
  }
} 