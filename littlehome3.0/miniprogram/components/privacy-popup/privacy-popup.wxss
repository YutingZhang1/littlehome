/* components/privacy-popup/privacy-popup.wxss */
.privacy-popup-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  padding: 40rpx;
}

.privacy-popup-content {
  background: #FFFDF9;
  border-radius: 24rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

/* 弹窗头部 */
.popup-header {
  background: linear-gradient(135deg, #E6A4B4 0%, #F8E8EE 100%);
  padding: 32rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.popup-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.popup-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: bold;
  color: #2C1810;
}

.popup-close {
  background: none;
  border: none;
  font-size: 48rpx;
  color: #6B4E3D;
  padding: 0;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 弹窗内容 */
.popup-body {
  padding: 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.feature-info {
  margin-bottom: 32rpx;
}

.feature-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #2C1810;
  margin-bottom: 12rpx;
}

.feature-desc {
  display: block;
  font-size: 26rpx;
  color: #6B4E3D;
  line-height: 1.5;
}

/* 数据收集说明 */
.data-collection {
  margin-bottom: 32rpx;
}

.data-title {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  color: #2C1810;
  margin-bottom: 20rpx;
}

.data-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.data-item {
  display: flex;
  align-items: flex-start;
  background: rgba(230, 164, 180, 0.1);
  border-radius: 12rpx;
  padding: 16rpx;
}

.data-icon {
  font-size: 24rpx;
  margin-right: 12rpx;
  margin-top: 4rpx;
}

.data-text {
  font-size: 26rpx;
  font-weight: 600;
  color: #2C1810;
  margin-bottom: 4rpx;
}

.data-desc {
  font-size: 24rpx;
  color: #6B4E3D;
  line-height: 1.4;
}

/* 隐私承诺 */
.privacy-commitment {
  margin-bottom: 32rpx;
  background: rgba(172, 215, 229, 0.1);
  border-radius: 16rpx;
  padding: 24rpx;
}

.commitment-title {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  color: #2C1810;
  margin-bottom: 16rpx;
}

.commitment-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.commitment-item {
  font-size: 24rpx;
  color: #6B4E3D;
  line-height: 1.4;
}

/* 设置状态 */
.settings-status {
  margin-bottom: 32rpx;
}

.status-title {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  color: #2C1810;
  margin-bottom: 16rpx;
}

.status-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.status-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 16rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 8rpx;
  border: 1rpx solid #F3E9DD;
}

.status-name {
  font-size: 24rpx;
  color: #6B4E3D;
}

.status-value {
  font-size: 24rpx;
  font-weight: 600;
}

.status-value.enabled {
  color: #4CAF50;
}

.status-value.disabled {
  color: #FF5722;
}

/* 弹窗底部 */
.popup-footer {
  padding: 32rpx;
  display: flex;
  gap: 20rpx;
  border-top: 1rpx solid #F3E9DD;
  background: #FFFDF9;
}

.btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
}

.btn-outline {
  background: transparent;
  color: #E6A4B4;
  border: 2rpx solid #E6A4B4;
}

.btn-primary {
  background: linear-gradient(135deg, #E6A4B4 0%, #D88BA3 100%);
  color: white;
  box-shadow: 0 4rpx 15rpx rgba(230, 164, 180, 0.3);
}

.btn:active {
  transform: translateY(2rpx);
} 