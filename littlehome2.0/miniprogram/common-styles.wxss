.back-btn {
  width: 80rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  left: 0;
  z-index: 1;
}

.back-btn image {
  width: 40rpx;
  height: 40rpx;
  transition: transform 0.2s ease;
  filter: brightness(0) invert(1);
}

.back-btn:active image {
  transform: scale(0.9);
}

.pretty-gradient-btn {
  background: linear-gradient(90deg, #ff9eaa 0%, #9fc3f8 100%);
  color: #fff;
  border: none;
  border-radius: 16rpx;
  height: 84rpx;
  line-height: 84rpx;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2px 8px #f8cdd5;
  transition: opacity 0.2s;
  margin: 0;
}
.pretty-gradient-btn:active { opacity: 0.8; }
.pretty-cancel-btn {
  background: #f5f5f5;
  color: #888;
  border: none;
  border-radius: 16rpx;
  height: 84rpx;
  line-height: 84rpx;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: none;
  transition: opacity 0.2s;
  margin: 0;
}
.pretty-cancel-btn:active { opacity: 0.7; }
.modal-mask {
  position: fixed;
  left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.3);
  z-index: 1000;
}
.modal-content {
  position: absolute;
  left: 50%; top: 50%;
  transform: translate(-50%, -50%);
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx 30rpx 30rpx;
  box-shadow: 0 4rpx 24rpx #e0e0e0;
  min-width: 500rpx;
  z-index: 1001;
}
.modal-title {
  font-size: 32rpx;
  color: #e573a7;
  margin-bottom: 30rpx;
}
.list-tip {
  color: #bbb;
  font-size: 24rpx;
  margin: 10rpx 0 0 10rpx;
} 