  box-shadow: 0 8rpx 24rpx rgba(230, 164, 180, 0.4);
  transform: scale(1.08);
  font-weight: 600;
  position: relative;
  animation: selectedPulse 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 5;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

@keyframes selectedPulse {
  0% {
    transform: scale(1);
    box-shadow: 0 2rpx 8rpx rgba(230, 164, 180, 0.2);
  }
  50% {
    transform: scale(1.15);
    box-shadow: 0 12rpx 28rpx rgba(230, 164, 180, 0.6);
  }
  100% {
    transform: scale(1.08);
    box-shadow: 0 8rpx 24rpx rgba(230, 164, 180, 0.4);
  }
}

