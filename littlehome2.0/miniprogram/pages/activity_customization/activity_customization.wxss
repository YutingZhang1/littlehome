/* 页面级别滚动设置 */
page {
  height: 100%;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

/* 自定义导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: linear-gradient(135deg, #ff9eaa 0%, #9fc3f8 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding-top: 44rpx; /* 适配状态栏 */
}

.navbar-title {
  color: white;
  font-size: 36rpx;
  font-weight: bold;
}

/* 页面容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #ff9eaa 0%, #9fc3f8 100%);
  padding: 0;
  margin-top: 100rpx; /* 为导航栏留出空间 */
  padding-bottom: 120rpx; /* 为底部留出更多空间 */
  overflow-y: auto; /* 允许垂直滚动 */
  -webkit-overflow-scrolling: touch; /* iOS平滑滚动 */
  position: relative; /* 确保定位正确 */
  height: auto; /* 确保高度自适应 */
}

/* 页面头部 */
.header {
  background: linear-gradient(135deg, #ff9eaa 0%, #9fc3f8 100%);
  padding: 60rpx 40rpx 40rpx;
  text-align: center;
  color: white;
}

.header-content {
  max-width: 600rpx;
  margin: 0 auto;
}

.header-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.header-subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
  line-height: 1.4;
}

/* 标签页切换 */
.tab-container {
  display: flex;
  background: rgba(255, 255, 255, 0.9);
  margin: 20rpx 40rpx;
  border-radius: 16rpx;
  padding: 8rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: linear-gradient(135deg, #ff9eaa, #9fc3f8);
  color: white;
  transform: scale(1.05);
}

.tab-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.tab-text {
  font-size: 24rpx;
  font-weight: bold;
}

/* 天气信息 */
.weather-info {
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.8);
  margin: 20rpx 40rpx;
  padding: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.weather-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.weather-location {
  font-size: 24rpx;
  color: #6B4E3D;
  margin-bottom: 8rpx;
}

.weather-icon {
  font-size: 32rpx;
  margin-bottom: 4rpx;
}

.weather-temp {
  font-size: 28rpx;
  font-weight: bold;
  color: #2C1810;
}

.weather-divider {
  font-size: 24rpx;
  margin: 0 20rpx;
}

.weather-tip {
  background: linear-gradient(135deg, rgba(230, 164, 180, 0.1), rgba(216, 139, 163, 0.1));
  border: 2rpx solid rgba(230, 164, 180, 0.3);
  border-radius: 16rpx;
  padding: 20rpx;
  margin: 20rpx;
  text-align: center;
}

.tip-text {
  font-size: 26rpx;
  color: #6B4E3D;
  line-height: 1.5;
}

/* 内容区域 */
.content-section {
  padding: 0 40rpx;
  overflow-y: auto; /* 确保内容区域可以滚动 */
}

/* 通用区块样式 */
.profile-section,
.recommendation-section,
.mall-section,
.guide-section {
  background: rgba(255, 255, 255, 0.8);
  margin-bottom: 32rpx;
  padding: 32rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  position: relative; /* 确保定位正确 */
  z-index: 1; /* 确保层级正确 */
}

/* AI个性化推荐区域 */
.ai-recommendation-section {
  background: linear-gradient(135deg, rgba(230, 164, 180, 0.1), rgba(216, 139, 163, 0.1));
  margin-bottom: 32rpx;
  padding: 32rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(230, 164, 180, 0.2);
  border: 2rpx solid rgba(230, 164, 180, 0.2);
  position: relative;
  z-index: 1;
  animation: aiSectionPulse 3s ease-in-out infinite;
}

@keyframes aiSectionPulse {
  0%, 100% {
    box-shadow: 0 4rpx 20rpx rgba(230, 164, 180, 0.2);
    border-color: rgba(230, 164, 180, 0.2);
  }
  50% {
    box-shadow: 0 8rpx 30rpx rgba(230, 164, 180, 0.3);
    border-color: rgba(230, 164, 180, 0.3);
  }
}

.section-header {
  text-align: center;
  margin-bottom: 24rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #2C1810;
  margin-bottom: 8rpx;
}

.section-subtitle {
  display: block;
  font-size: 26rpx;
  color: #6B4E3D;
}

/* AI推荐区域标题特殊样式 */
.ai-recommendation-section .section-title {
  background: linear-gradient(135deg, #E6A4B4, #D88BA3);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-weight: bold;
  position: relative;
}

.ai-recommendation-section .section-subtitle {
  color: #E6A4B4;
  font-weight: 500;
}

/* 按钮样式 */
.profile-btn,
.generate-btn {
  background: linear-gradient(135deg, #E6A4B4, #D88BA3);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 32rpx;
  font-size: 28rpx;
  font-weight: bold;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.profile-btn:active,
.generate-btn:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, #D88BA3, #C67A92);
}

/* AI推荐区域按钮特殊样式 */
.ai-recommendation-section .generate-btn {
  background: linear-gradient(135deg, #E6A4B4, #D88BA3);
  box-shadow: 0 6rpx 20rpx rgba(230, 164, 180, 0.4);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  position: relative;
  overflow: hidden;
}

.ai-recommendation-section .generate-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s;
}

.ai-recommendation-section .generate-btn:active::before {
  left: 100%;
}

.ai-recommendation-section .generate-btn:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, #D88BA3, #C67A92);
  box-shadow: 0 4rpx 15rpx rgba(230, 164, 180, 0.3);
}

.btn-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.btn-text {
  font-size: 28rpx;
}

/* 礼物列表 */
.gift-list,
.activity-list {
  background: rgba(255, 255, 255, 0.8);
  margin-bottom: 32rpx;
  padding: 32rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  max-height: none; /* 移除高度限制 */
  overflow: visible; /* 允许内容溢出 */
}

/* 底部礼物推荐列表 */
.bottom-gift-list {
  background: rgba(255, 255, 255, 0.95);
  margin: 20rpx 40rpx;
  padding: 32rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(230, 164, 180, 0.1);
  animation: slideInUp 0.6s ease-out;
  overflow: hidden; /* 防止内容溢出 */
  max-width: 100%; /* 确保不超出屏幕宽度 */
  box-sizing: border-box; /* 确保padding和border包含在宽度内 */
}

/* 底部活动推荐列表 */
.bottom-activity-list {
  background: rgba(255, 255, 255, 0.95);
  margin: 20rpx 40rpx;
  padding: 32rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(230, 164, 180, 0.1);
  animation: slideInUp 0.6s ease-out;
  overflow: hidden; /* 防止内容溢出 */
  max-width: 100%; /* 确保不超出屏幕宽度 */
  box-sizing: border-box; /* 确保padding和border包含在宽度内 */
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(50rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.list-header {
  text-align: center;
  margin-bottom: 24rpx;
}

.list-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #2C1810;
  margin-bottom: 8rpx;
}

/* AI推荐结果标题特殊样式 */
.bottom-gift-list .list-title,
.bottom-activity-list .list-title {
  background: linear-gradient(135deg, #E6A4B4, #D88BA3);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-weight: bold;
  font-size: 36rpx;
}

.list-subtitle {
  display: block;
  font-size: 24rpx;
  color: #6B4E3D;
}

.gift-item,
.activity-item {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
  gap: 24rpx;
  min-height: 200rpx; /* 确保最小高度 */
  overflow: hidden; /* 防止内容溢出 */
  max-width: 100%; /* 确保不超出容器宽度 */
  box-sizing: border-box; /* 确保padding包含在宽度内 */
}

.gift-image,
.activity-image {
  position: relative;
  width: 150rpx;
  height: 150rpx;
  border-radius: 12rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.gift-image image,
.activity-image image {
  width: 100%;
  height: 100%;
}


.activity-type-badge {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  background: rgba(0, 0, 0, 0.7);
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.gift-info,
.activity-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  overflow: hidden; /* 防止内容溢出 */
  min-width: 0; /* 允许flex项目收缩 */
}

.gift-name,
.activity-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #2C1810;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 100%;
}

.gift-reason,
.activity-desc {
  font-size: 26rpx;
  color: #6B4E3D;
  line-height: 1.4;
  margin-bottom: 16rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 3; /* 限制最多显示3行 */
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  max-width: 100%;
}

.gift-meta,
.activity-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.price-info,
.duration-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.points-display,
.mall-points-display,
.activity-points-display,
.product-points-display {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.points-icon,
.mall-points-icon,
.activity-points-icon,
.product-points-icon {
  width: 24rpx;
  height: 24rpx;
}

.current-points,
.mall-current-points,
.activity-points,
.product-current-points {
  font-size: 32rpx;
  font-weight: bold;
  color: #E6A4B4;
}

.original-points,
.mall-original-points,
.product-original-points {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

.rating-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.rating {
  font-size: 24rpx;
  color: #FFB800;
}

.sales,
.participants {
  font-size: 22rpx;
  color: #6B4E3D;
}

.activity-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.activity-tag {
  background: rgba(230, 164, 180, 0.2);
  color: #E6A4B4;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.gift-actions,
.activity-actions {
  display: flex;
  gap: 12rpx;
  overflow: hidden;
  max-width: 100%;
}

.action-btn {
  flex: 1;
  border-radius: 8rpx;
  padding: 12rpx;
  font-size: 24rpx;
  font-weight: bold;
  border: none;
  transition: all 0.3s ease;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  min-width: 0;
}

.action-btn.primary {
  background: linear-gradient(135deg, #E6A4B4, #D88BA3);
  color: white;
}

.action-btn.secondary {
  background: rgba(230, 164, 180, 0.2);
  color: #E6A4B4;
  border: 2rpx solid rgba(230, 164, 180, 0.3);
}

.action-btn:active {
  transform: scale(0.95);
}

/* 商城网格 */
.mall-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  max-height: none; /* 移除高度限制 */
  overflow: visible; /* 允许内容溢出 */
}

.mall-item {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  min-height: 300rpx; /* 确保最小高度 */
}

.mall-item:active {
  transform: scale(0.95);
}

.mall-image {
  width: 100%;
  height: 150rpx;
}

.mall-info {
  padding: 16rpx;
}

.mall-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #2C1810;
  margin-bottom: 8rpx;
  display: block;
}

.mall-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 4rpx;
  margin-bottom: 8rpx;
}

.mall-tag {
  background: rgba(230, 164, 180, 0.2);
  color: #E6A4B4;
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
}

.mall-price {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 4rpx;
}

.mall-current {
  font-size: 28rpx;
  font-weight: bold;
  color: #E6A4B4;
}

.mall-original {
  font-size: 22rpx;
  color: #999;
  text-decoration: line-through;
}

.mall-stock {
  font-size: 22rpx;
  color: #6B4E3D;
}

/* 攻略列表 */
.guide-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  max-height: none; /* 移除高度限制 */
  overflow: visible; /* 允许内容溢出 */
}

.guide-item {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  min-height: 250rpx; /* 确保最小高度 */
}

.guide-item:active {
  transform: scale(0.98);
}

.guide-image {
  width: 100%;
  height: 200rpx;
}

.guide-info {
  padding: 20rpx;
}

.guide-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.guide-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #2C1810;
}

.guide-category {
  background: rgba(230, 164, 180, 0.2);
  color: #E6A4B4;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.guide-desc {
  font-size: 24rpx;
  color: #6B4E3D;
  line-height: 1.4;
  margin-bottom: 12rpx;
}

.guide-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.guide-rating {
  font-size: 22rpx;
  color: #FFB800;
}

.guide-views {
  font-size: 22rpx;
  color: #6B4E3D;
}

/* 加载状态 */
.loading-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

/* 底部加载状态 */
.bottom-loading-container {
  background: rgba(255, 255, 255, 0.95);
  margin: 20rpx 40rpx;
  padding: 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(230, 164, 180, 0.2);
  animation: fadeInUp 0.5s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #E6A4B4;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.bottom-loading-container .loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 3rpx solid rgba(230, 164, 180, 0.3);
  border-top: 3rpx solid #E6A4B4;
  margin-bottom: 16rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: white;
  font-size: 28rpx;
}

.bottom-loading-container .loading-text {
  color: #6B4E3D;
  font-size: 28rpx;
  font-weight: 500;
  margin-top: 16rpx;
  text-align: center;
  line-height: 1.4;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 80%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

/* 用户画像表单样式 */
.profile-modal {
  width: 90%;
  max-width: 700rpx;
  max-height: 90vh;
}

.step-indicator {
  display: flex;
  background: #f5f5f5;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.step {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  position: relative;
  padding: 10rpx 0;
}

.step.active {
  color: #E6A4B4;
  font-weight: bold;
}

.step:not(:last-child)::after {
  content: '';
  position: absolute;
  right: -50%;
  top: 50%;
  transform: translateY(-50%);
  width: 100%;
  height: 2rpx;
  background: #ddd;
  z-index: 1;
}

.step.active::after {
  background: #E6A4B4;
}

.form-step {
  padding: 20rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.step-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2C1810;
  text-align: center;
  margin-bottom: 30rpx;
}

.form-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #2C1810;
  margin-bottom: 16rpx;
  display: block;
}

.section-header-with-avatar {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar-container {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #E6A4B4, #D88BA3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(230, 164, 180, 0.3);
  animation: avatarBounce 2s ease-in-out infinite;
}

.avatar-icon {
  font-size: 32rpx;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

@keyframes avatarBounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-4rpx);
